// See https://aka.ms/new-console-template for more information
using System;
internal class Program
{
    private static void Main(string[] args)
    {
        int id=134567;
        string nome="filippo";
        string cognome="gigante";
        string risposta;

        Program verificaP= new Program();
        do{
            Console.WriteLine("Prima di cambiare i propri dati, inserisci i tuoi dati per l'autenticazione");
            string verifica= verificaP.verifica(nome, cognome, id);
            
            if (verifica=="si"){
                Console.WriteLine("inserisci il nuovo nome");
                nome=verificaP.modNome();

                Console.WriteLine("inserisci il nuovo cognome");
                cognome=verificaP.modCognome();

                Console.WriteLine("inserisci il nuovo id");
                id=verificaP.modId();

                Console.WriteLine($"ecco i tuoi nuovi dati: nome={nome}, cognome={cognome}, id={id}");
            }
            
        Console.WriteLine("vuoi cambiare di nuovo i tuoi dati?");
        risposta=Console.ReadLine();
        }while(risposta=="si");
    }

    string verifica(string nome, string cognome, int id){
        string accesso="no";
        Console.WriteLine("inserisci il proprio nome");
        string nomeV=Console.ReadLine();

        Console.WriteLine("inserisci il proprio cognome");
        string cognomeV=Console.ReadLine();

        Console.WriteLine("inserisci il proprio id");
        int idV = Convert.ToInt32(Console.ReadLine());

        if(nomeV == nome && cognomeV==cognome && idV==id){
            Console.WriteLine("Dati corretti, ora puoi modificare i tuoi dati!");
            accesso="si";
        }else{
            Console.WriteLine("Dati incorretti!");
        }
        return accesso;

    }
    string modNome(){
        string nome;
        nome=Console.ReadLine();
        return nome;
    }
    string modCognome(){
        string cognome;
        cognome=Console.ReadLine();
        return cognome;
    }
    int modId(){
        int id;
        id=Convert.ToInt32(Console.ReadLine());
        return id;
    }

}
