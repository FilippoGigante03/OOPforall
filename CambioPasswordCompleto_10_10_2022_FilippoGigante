// See https://aka.ms/new-console-template for more information
using System;
internal class Program
{
    private static void Main(string[] args)
    {
        int id=0;
        string nome="";
        string cognome="";
        string risposta="";
        string risposta2="";
        string risposta3="no";

        Console.WriteLine("vuoi creare i tuoi primi dati per l'autenticazione?(si-no)");
        risposta2=Console.ReadLine();

        while (risposta2=="si" && risposta3=="no"){
            Console.WriteLine("inserisci il proprio nome");
            nome=Console.ReadLine();

            Console.WriteLine("inserisci il proprio cognome");
            cognome=Console.ReadLine();

            Console.WriteLine("inserisci il proprio id");
            id = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine($"ecco i dati inseriti: nome={nome}, cognome={cognome}, id={id}, sono corretti? (si-no)");
            risposta3=Console.ReadLine();  
        }

        if (risposta2=="no"){
            Console.WriteLine("dati non inseriti, chiuder√≤ l'applicazione");
            Environment.Exit(0);
        }

        Program verificaP= new Program();
        do{
            Console.WriteLine("vuoi cambiare i dati dell'autenticazione,mostrare i propri dati o uscire?(modifica, mostra,esci)");
            risposta=Console.ReadLine();
            if(risposta=="modifica"){
                string verifica= verificaP.verifica(nome, cognome, id);
                if (verifica=="si"){
                    Console.WriteLine("inserisci il nuovo nome");
                    nome=verificaP.modNome();

                    Console.WriteLine("inserisci il nuovo cognome");
                    cognome=verificaP.modCognome();

                    Console.WriteLine("inserisci il nuovo id");
                    id=verificaP.modId();

                    Console.WriteLine($"ecco i tuoi nuovi dati: nome={nome}, cognome={cognome}, id={id}");
                }
            }else if(risposta=="mostra"){
                verificaP.mostra(nome,cognome);
            }
        }while(risposta!="esci");
        Console.WriteLine("Grazie per aver usato questo programma!"); 
    }

    string verifica(string nome, string cognome, int id){
        string accesso="no";
        Console.WriteLine("inserisci il proprio nome");
        string nomeV=Console.ReadLine();

        Console.WriteLine("inserisci il proprio cognome");
        string cognomeV=Console.ReadLine();

        Console.WriteLine("inserisci il proprio id");
        int idV = Convert.ToInt32(Console.ReadLine());

        if(nomeV == nome && cognomeV==cognome && idV==id){
            Console.WriteLine("Dati corretti, ora puoi modificare i tuoi dati!");
            accesso="si";
        }else{
            Console.WriteLine("Dati incorretti!");
        }
        return accesso;

    }
    string modNome(){
        string nome;
        nome=Console.ReadLine();
        return nome;
    }
    string modCognome(){
        string cognome;
        cognome=Console.ReadLine();
        return cognome;
    }
    int modId(){
        int id;
        id=Convert.ToInt32(Console.ReadLine());
        return id;
    }
    void mostra(string nome, string cognome){
        Console.WriteLine("ecco i tuoi dati:");
        Console.WriteLine($"nome={nome}, cognome={cognome}");
    }

}
